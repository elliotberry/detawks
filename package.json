{
    "name": "detawks",
    "version": "0.1.0",
    "description": "An opinionated mass file renamer in node. Meant to be similar to the venerable detox unix application, but, crappier, since it's my attempt in nodejs.",
    "main": "./index.js",
    "scripts": {
        "test": "node ./test.js"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:elliotberry/detawks.git"
    },
    "engines": {
        "node": ">=18.10"
    },
    "files": [
        "lib/**/*",
        "index.js",
        "cli.js"
    ],
    "bin": {
        "detawks": "./cli.js"
    },
    "type": "module",
    "author": "ɛʟʟɨօȶ b",
    "license": "Unlicense",
    "dependencies": {
        "chalk": "^5.0.1",
        "change-case": "^4.1.2",
        "fdir": "^6.0.1",
        "rc": "^1.2.8",
        "yargs": "^17.6.2"
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "node": true,
            "es6": true
        },
        "rules": {
            "no-console": "off",
            "no-unused-vars": "warn"
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "devDependencies": {
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "prettier": "^2.7.1",
        "release-it": "^16.2.1"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release v${version}"
        },
        "github": {
            "release": true
        }
    }
}
